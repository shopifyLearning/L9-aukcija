* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
img,
svg {
  display: block;
  width: 100%;
}

body {
  background: #f6f6f6;
  color: #111;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
    Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
}

li {
  list-style: none;
}

a {
  text-decoration: none;
}

.right-nav-items {
  display: flex;
  align-items: center;
}


.middle-nav-links {
  align-items: center;
  justify-content: center;
  display: flex;
  font-size: 17px;
  font-weight: bold;
  text-align: center;
  color: #223D98;
}

.middle-nav-list {
  list-style-type: none;
  display: none;
}

.middle-nav-list li {
  padding: 10px;
}

.middle-nav-list li:hover {
  text-decoration: underline;
}

.middle-nav-list a {
  color: inherit;
  text-decoration: none;
}

.hamburger-icon {
  display: none;
  color: {{ section.settings.color_menu_text }};
}

@media (max-width: 768px) {
  .hamburger-icon {
    display: block;
    cursor: pointer;
    padding: 10px;
    margin-right: 10px;
  }

  .drawer-menu {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 180px;
    background-color: #f9f9f9;
    z-index: 1000;
    transform: translateX(-100%);
    transition: transform 0.3s ease;
    overflow-y: auto;
    padding-top: 50px;
  }

  .drawer-menu.open {
    transform: translateX(0);
  }

  .drawer-menu ul {
    list-style-type: none;
    padding: 0;
  }

  .drawer-menu li {
    padding: 15px;
  }

  .drawer-menu li:hover {
    background-color: #ddd;
  }

  .drawer-menu a {
    font-weight: bold;
    text-decoration: none;
  }

  .right-nav-items{
    width: 100%;
  }
}

@media (min-width: 769px) {
  .middle-nav-list {
    display: flex;
  }

  .drawer-menu {
    display: none;
  }
}

/* FOOTER */

.footer {
  background-color: #fff;
  padding: 60px 0;
  font-size: 14px;
}

.width {
  max-width: 1100px;
  margin: 0 auto;
  width: 90%;
}

.footer-top {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  gap: 40px;
}

@media (max-width: 768px){  
  .footer-column--text{
    display: none !important;
  }
}

@media (min-width: 760px) {
  .footer-top {
    flex-direction: row;
    justify-content: space-between;
    row-gap: 60px;
    column-gap: 40px;
  }

  .footer-column--text {
    width: 100%;
  }

}

@media (min-width: 1040px) {
  .footer-column--text {
    width: auto;
  }

  .footer-column--text,
  .footer-column--news {
    max-width: 320px;
  }
}

.footer-column h2 {
  font-size: 13px;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: 400;
  margin-bottom: 20px;
}

.footer-column p,
.footer-column a {
  color: #666;
}

.footer-column li + li {
  margin-top: 10px;
}

.footer-column a {
  transition: 0.2s color;
}

.footer-column a:hover {
  color: #111;
}

.footer-column.footer-column--news form {
  margin-top: 20px;
}

.footer-column.footer-column--news input,
.footer-column.footer-column--news button {
  appearance: none;
  outline: none;
  line-height: 50px;
}

.footer-column.footer-column--news input {
  appearance: none;
  outline: none;
  display: block;
  width: 100%;
  border: 1px solid #ddd;
  line-height: 50px;
  padding: 0 16px;
}

.footer-column.footer-column--news button {
  appearance: none;
  display: inline-block;
  background: #111;
  color: #fff;
  padding: 0 32px;
  margin-top: 10px;
  transition: 0.2s color, 0.2s background-color, 0.2s border-color;
}

.footer-column.footer-column--news button:hover {
  background-color: #323232;
  border-color: #323232;
  cursor: pointer;
}

.footer-bottom {
    margin-top: 60px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.footer-copyright {
    color: #666;
}

.footer-cards {
    display: inline-flex;
    align-items: center;
    gap: 10px;
}

.footer-column--news-message {
  font-size: 12px;
  margin-bottom: 10px;
}

