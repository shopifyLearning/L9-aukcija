      width: 100%;
      height: 95%;
    }

  .product-card-grid h3 {
      text-align:center;
    }

    @media (max-width: 768px) {
      .products-grid {
        grid-template-columns: repeat(2, 1fr);
      }
      .product-card-grid {
        height:250px;
     }

     .product-card-grid img {
      width: 100%;
      height: 90%;
    }
   }

  /* MORE INFO */

   .more-info-wrapper{
      display: flex;
      flex-direction: column;
      width: 500px;
      justify-content: center;
      align-items: center;
   }

   .more-info-wrapper h1 {
      font-size: 50px;

   }

   .more-info-wrapper button {
      padding: 10px 20px 10px 20px;
      background-color: black;
      border: none;
      color: white;
      border-radius: 20px;
      cursor: pointer;
   }

   .more-info-wrapper button:hover {
      background-color: rgb(185, 185, 185);

   }

